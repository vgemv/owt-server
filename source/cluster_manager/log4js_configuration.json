{
  "appenders": [
    {
      "type": "categoryFilter",
      "exclude": "Usage",
      "appender": {
        "type": "console",
        "layout": {
          "type": "pattern",
          "pattern": "%d  - %p: %c - %m",
          "replaceConsole": true
        }
      }
    },  
    {
      "type": "file",
      "filename": "../logs/usage_history.log",
      "category": "Usage",
      "layout": {
        "type": "pattern",
        "pattern": "[%d]%m",
        "replaceConsole": true
      }
    }
  ],
  "levels": {
    "AmqpClient": "INFO",
    "Main": "INFO",
    "ClusterManager": "INFO",
    "Scheduler": "INFO",
    "Matcher": "INFO",
    "Strategy": "INFO"
  }
}
